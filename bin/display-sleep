#!/usr/bin/env bash
# Put the macOS display to sleep immediately.
# Useful for remote triggering via SSH or automation tools.
set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
# shellcheck source=lib/common.sh
source "$SCRIPT_DIR/lib/common.sh"

require_macos

pmset displaysleepnow
