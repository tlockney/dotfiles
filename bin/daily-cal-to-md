#!/usr/bin/env sh

if [ -z ${date+x} ]; then
	DATE=$(date +%Y-%m-%d)
else
	DATE=$date
fi

/usr/local/bin/icalBuddy \
	-eed -npn -nc \
	-ps '/ /' \
	-iep 'datetime,title' \
	-po 'datetime,title' \
	-b '## ' \
	-df '' \
	-nrd \
	-tf '%I:%M%p' \
	-ic 'tlockney@hubspot.com' \
	eventsFrom:"$DATE 00:00:00 -7" to:"$DATE 23:59:59 -7" | \
	grep -v 'Reminder' | \
	grep -v 'Do Not ' | \
	grep -v 'Busy (via Clockwise)' | \
	grep -v 'Focus Time'

# make sure this never produces an error that causes calling programs to fail
exit 0
