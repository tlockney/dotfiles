#!/usr/bin/env bash
# Wake the macOS display by asserting user activity.
# Useful for remote triggering via SSH or automation tools.
set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
# shellcheck source=lib/common.sh
source "$SCRIPT_DIR/lib/common.sh"

require_macos

caffeinate -u -t 2
